{
  "name": "react-py",
  "version": "1.7.0",
  "description": "Run Python code directly in the browser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "mocha -r jsdom-global/register",
